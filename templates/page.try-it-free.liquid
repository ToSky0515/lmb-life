<style>
img {
  width: 100%;
}
.main-content {
    margin-bottom: 0 !important;
    max-width: 1020px;
    margin: 0 auto;
}
.free-product {
    position: relative;
    overflow: hidden;
}
.full-width {
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
}
.free-product:before {
  background: url(//cdn.shopify.com/s/files/1/1223/5184/t/15/assets/bg-hemrid-free_2048x.jpg?v=1662848…) repeat;
  background-size: cover;
  content: "";
  position: absolute;
  width: 140%;
  height: 140%;
  top: -20%;
  left: -20%;
  z-index: -1;
  -webkit-transform: rotate(7deg);
  -moz-transform: rotate(7deg);
  -ms-transform: rotate(7deg);
  -o-transform: rotate(7deg);
  transform: rotate(7deg);
}
.free-product:after {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    content: "";
    background: rgba(0, 0, 0, 0.75);
    z-index: -1;
}
#step2, #step3, #step4, #step5, #step6 {
  display: none; 
}
.free-product .free-product--flex {
  display: flex;
  flex-direction: row-reverse;
  flex-wrap: nowrap;
  padding: 25px 0;
}
.pxs-newsletter {
  max-width: 1020px;
  padding: 50px 30px;
  margin: auto;
}
.free-product .free-product--form {
  flex: 1 0 50%;
  text-align: center;
  padding: 25px;
  background: rgba(0, 0, 0, 0.2);
}
.free-product .free-product--form h2 {
  margin: 15px auto;
  font-size: 1.75em;
}
.free-product .free-product--form h2, .free-product .free-product--form p {
  color: #fff;
  margin-bottom: 10px;
}
.free-product .free-product--form p {
  margin: 15px auto;
}
.free-product input[type="text"], .free-product input[type="email"], .free-product select {
  padding: 10px 15px;
  border: none;
  color: #222;
  display: block;
  width: 100%;
  font-size: 18px;
  margin-bottom: 10px;
  border-radius: 3px;
}

.free-product .footnote {
  font-size: 12px;
  line-height: 17px;
}
.free-product .free-product--intro {
  padding: 25px 25px 25px 0;
}
.free-product .free-product--intro h1 {
  margin: 0;
}
.free-product .free-product--intro ul {
  list-style-image: url(//cdn.shopify.com/s/files/1/1223/5184/t/15/assets/green-check_30x.png?v=4721497…);
  padding: 10px 0 10px 25px;
  margin: 0 0 0 20px;
  font-size: 24px;
  font-weight: 700;
}
.free-product .free-product--intro h1, .free-product .free-product--intro h2, .free-product .free-product--intro h3, .free-product .free-product--intro ul, .free-product .free-product--intro p {
    color: #fff;
}
#step2 .pxs-newsletter {
    padding: 25px;
}
.free-product .free-product--form .button {
    width: 100%;
}
.free-container {
    max-width: 100%;
    padding: 20px 0 20px;
    margin: 0 auto;
}
.free-container h1, .free-container h2, .free-container h3 {
    color: #fff;
}
.page-title {
    margin: 0 0 50px;
    text-align: center;
}
.free-product .collection-products {
    background: #fff;
    margin-bottom: 25px;
    padding: 25px;
}
.collection-products.products-per-row-3, .collection-products.products-per-row-4 {
    max-width: 1050px;
}
.collection-products {
    max-width: 1110px;
    margin: 0 auto;
    font-size: 0;
}
.products-per-row-3 .product-list-item {
    width: 33.33%;
    padding: 0 15px;
}
.product-list-item {
    font-size: 16px;
    display: inline-block;
    vertical-align: top;
    width: 50%;
    text-align: center;
    margin: 0 0 60px;
    padding: 0 30px;
}
.product-list-item-thumbnail {
    position: relative;
    display: block;
    max-width: 100%;
}
.product-list-item-thumbnail a {
    position: relative;
    display: inline-block;
    max-width: 100%;
}
.product-list-item-thumbnail .product-list-item-image {
    display: block;
    margin: 0 auto;
}
.product-list-item-title {
    margin: 10px 0 0 0;
    font-size: 15px;
    color: #333333;
    text-align: center;
    line-height: 25px;
    font-weight: 400;
}
.product-list-item-title a {
    color: #333333;
}
.button.secondary, .feature-product input[type="submit"].secondary {
    color: white;
    background: #adadad;
}
.free-container .star-rating.star-5 {
    width: 160px;
}
.free-container .star-rating {
    font-size: 0;
    white-space: nowrap;
    display: inline-block;
    width: 160px;
    height: 32px;
    overflow: hidden;
    position: relative;
    background: url(data:image/svg+xml;base64,);
    background-size: contain;
}
.free-container .star-rating.star-5 input, .free-container .star-rating.star-5 i {
    width: 20%;
}
.free-container .star-rating.star-5 i ~ i {
    width: 40%;
}
.free-container .star-rating.star-5 i ~ i ~ i {
    width: 60%;
}
.free-container .star-rating.star-5 i ~ i ~ i ~ i {
    width: 80%;
}
.free-container .star-rating.star-5 i ~ i ~ i ~ i ~ i {
    width: 100%;
}
.free-container .star-rating input:hover + i, .free-container .star-rating input:checked + i {
    opacity: 1;
}
.free-container .star-rating i {
    opacity: 0;
    position: absolute;
    left: 0;
    top: 0;
    height: 100%;
    width: 20%;
    z-index: 1;
    background: url(data:image/svg+xml;base64,);
    background-size: contain;
}
.free-container .star-rating input {
    -moz-appearance: none;
    -webkit-appearance: none;
    opacity: 0;
    display: inline-block;
    width: 20%;
    height: 100%;
    margin: 0;
    padding: 0;
    z-index: 2;
    position: relative;
}
.free-container textarea {
    display: block;
    width: 100%;
    height: 125px;
    margin-bottom: 10px;
    padding: 15px 10px;
}
.free-container .share-review, .free-container .share-address, .free-container .confirm-details {
    background: #fff;
    padding: 25px;
    margin-bottom: 50px;
}
.free-product .confirm-details input[type="text"], .free-product .confirm-details input[type="email"], .free-product .confirm-details select, .free-product .share-address input[type="text"], .free-product .share-address input[type="email"], .free-product .share-address select {
    border: 1px solid #aaa;
}
.free-product .select-css option {
    font-weight: normal;
}
.free-product input[type="text"].error, .free-product input[type="email"].error, .free-product select.error {
    border: 2px solid #f00;
    background: #ffe7e7;
}

@media (min-width: 1020px) {
  .free-container {
      max-width: 65%;
      padding-top: 68px;
  }
}
@media (max-width: 720px) {
  .free-product .free-product--flex {
    flex-wrap: wrap;
    padding: 25px 0;
    flex-direction: row-reverse;
  }
  .free-product .free-product--intro {
    padding: 25px;
  }
  .free-container {
    -webkit-box-orient: vertical;
    -webkit-box-direction: normal;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
    flex-direction: column;
    padding: 25px;
  }
  .product-list-item {
    padding: 0 !important;
    display: block;
    width: 100% !important;
  }
}
</style>
<div class="main-content">
<div class="free-product full-width">
  <form id="free-gift" action="//manage.kmail-lists.com/subscriptions/subscribe" data-ajax-submit="//manage.kmail-lists.com/ajax/subscriptions/subscribe" method="GET" target="_blank" novalidate="novalidate">
    <input type="hidden" name="g" value="M8mx4q">
    <input type="hidden" name="$fields" value="name,order-number,ordered-product,rating,review_body,claimed-product,street,city,state,zip,shared,review_link">
    <div id="step1" class="pxs-newsletter free-product--flex">
      <div class="free-product--form">
        <h2>Grab Your FREE Product Today! </h2>
        <p>Please fill out our form to secure your FREE product.*</p>
        <label for="name" style="display:none;">Name</label>
        <input type="text" placeholder="Your Name *" id="name" name="name">
        <label for="k_id_email" style="display:none;">Email</label>
        <input type="email" id="k_id_email" name="email" placeholder="Your Email *">
        <p><a href="#step2" class="button">Claim My Free Product</a></p>
        <p class="footnote">*lmbhealth will not share your personal information with any third parties. By clicking the button above, you’ll get your free product of lmbhealth. You will also benefit from exclusive access to amazing Amazon deals and offers that you’ll love. You can easily unsubscribe from receiving our email correspondence at any time. </p>
      </div>  
      <div class="free-product--intro">
        <h1>{{ page.title }}</h1>
        <ul>
          <li>No Hidden Fees</li>
          <li>No Credit Card Required</li>
          <li>Shipping Included. Absolutely FREE!</li>
          <li>No Obligation</li>
        </ul>
        <p class="footnote">Note: Each Amazon account is limited to only one free product of lmbhealth. This offer is only available to prior customers who have purchased lmbhealth products from lmbhealth.com or our official seller on Amazon.com. This promotion is only authorized after you have used the product for 15 days. This will ensure that you have given the product enough time to help you and provide adequate feedback on your experience with lmbhealth, if you choose. This offer is not dependent on the requirement that you leave a review on any platform. If you choose to provide feedback, this offer is also not contingent upon the quality or method of feedback you provide.</p>
      </div>  
    </div>
    <div id="step2">
      <div class="pxs-newsletter" style="padding-bottom:0;">
        <div class="free-product--flex">
          <div class="free-product--intro">
            <h2>How to Find Your Order ID</h2>
            <h3><strong>Step 1:</strong> Visit your order details page. <a href="https://www.amazon.com/gp/css/order-history" target="_blank">Click here.</a></h3>
            <img src="{{ 'Order-Details.png' | asset_img_url: '1024x' }}" alt="Order Details">
            <h3><strong>Step 2:</strong> Copy your order number for the lmbhealth product you purchased.</h3>
            <img src="{{ 'Order-Number.png' | asset_img_url: '1024x' }}" alt="Order Number">
            <h3><strong>Step 3:</strong> Paste the order # into this form.</h3>
            <div class="free-product--form">
              <label for="order-number" style="display:none;">Order Number</label>
              <input type="text" id="order-number" name="order-number" placeholder="Enter Your Order ID">
              <p><a href="#step3" class="button">Search for Order</a></p>
            </div>          
          </div>
        </div>
      </div>
    </div>
    <div id="step3">
      <div class="free-container">
        <h2 class="page-title">Confirm the product you ordered by selecting it below</h2>
        <div class="collection-products products-per-row-3">
          {% for product in collections["review-options"].products %}
            {% unless product.title contains "Fiber Gummies" %}
              {% include 'product-list-items--free' %}
            {% endunless %}
          {% else %}
            <p class="empty">No Products</p>
          {% endfor %}
          <label for="review_body" style="display:none;">Review Body</label>
          <input type="text" id="review_body" name="review_body" style="display:none;">          
        </div>    
      </div>
      <label for="ordered-product" style="display:none;">Ordered Product</label>
      <input type="text" id="ordered-product" name="ordered-product" style="display:none;">
    </div>
    <div id="step4">
      <div class="free-container">
        <div class="free-product--claim">
          <h2 class="page-title">Claim Your Free Bottle</h2>
          <h3>Select your free gift from from the options below and continue to share your review.</h3>
          <div class="collection-products products-per-row-3">          
            {% for product in collections["free-options"].products %}
              {% include 'product-list-items--free-gift' %}
            {% else %}
              <p class="empty">{{ 'collections.collection.no_products' | t }}</p>
            {% endfor %}      
          </div>
        </div>
        <label for="claimed-product" style="display:none;">Claimed Product</label>
        <input type="text" id="claimed-product" name="claimed-product" style="display:none;">
      </div>
    </div>
    <div id="step5">
      <div class="free-container">
        <div class="free-product--confirm">
          <h2>Enter Your Shipping Address</h2>
          <div class="share-address">
